{% extends 'base.html.twig' %}

{% block title %}Hello FrontController!{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        {% for article in articles %}
        <div class="col-12 col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">
                        <a href="{{ path('app_article', { 'id': article.id }) }}">{{ article.title }}</a>
                    </h4>
                    <small>{{ article.category.label }}</small>
                    <p class="card-text">{{ article.content }}</p>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
